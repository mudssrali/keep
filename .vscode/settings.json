{
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/_build": true,
        "**/deps": true,
        "**/dist": true,
        "**/.cache": true,
        "typescript/**": true
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true,
        "**/bower_components": true,
        "**/_build": true,
        "**/deps": true
    },
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
    ],
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true,
        "source.organizeImports": true
    },
    "editor.formatOnSave": true,
    "eslint.workingDirectories": [
        "./web",
    ],
    "[typescriptreact]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "workbench.colorCustomizations": {
        "activityBar.activeBackground": "#a8163c",
        "activityBar.activeBorder": "#0a1c04",
        "activityBar.background": "#a8163c",
        "activityBar.foreground": "#e7e7e7",
        "activityBar.inactiveForeground": "#e7e7e799",
        "activityBarBadge.background": "#0a1c04",
        "activityBarBadge.foreground": "#e7e7e7",
        "statusBar.background": "#7b102c",
        "statusBar.foreground": "#e7e7e7",
        "statusBarItem.hoverBackground": "#a8163c",
        "titleBar.activeBackground": "#7b102c",
        "titleBar.activeForeground": "#e7e7e7",
        "titleBar.inactiveBackground": "#7b102c99",
        "titleBar.inactiveForeground": "#e7e7e799",
        "sash.hoverBorder": "#a8163c",
        "statusBarItem.remoteBackground": "#7b102c",
        "statusBarItem.remoteForeground": "#e7e7e7"
    },
    "peacock.color": "#7b102c",
    "git.ignoreLimitWarning": true,
    "files.exclude": {
        "**/node_modules": true
    }
}